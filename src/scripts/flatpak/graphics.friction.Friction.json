{
    "app-id": "graphics.friction.Friction",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "23.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "friction",
    "finish-args": [
            "--share=ipc",
            "--socket=fallback-x11",
            "--socket=wayland",
            "--socket=pulseaudio",
            "--device=dri",
            "--filesystem=xdg-documents",
            "--filesystem=xdg-pictures",
            "--filesystem=xdg-videos",
            "--filesystem=xdg-music",
            "--filesystem=xdg-desktop"
    ],
    "modules": [
        {
            "name": "friction",
            "buildsystem": "simple",
            "build-commands": [
                "mv Friction/* /app/",
                "rm -f /app/friction",
                "rm -f /app/bin/portable.txt",
                "rm -f /app/share/icons/hicolor/*/mimetypes/application-x-graphics.friction.Friction.png",
                "rm -f /app/share/icons/hicolor/scalable/mimetypes/application-x-graphics.friction.Friction.svg"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://sourceforge.net/projects/friction/files/snapshots/1.0.0-9d77ca09/friction-1.0.0-9d77ca09-linux-x86_64.tar.xz",
                    "sha256": "20f6788bd407029355cfcab99b3f48cef6556333eca7e06047cf93498c323ad4",
                    "dest": "./Friction"
                }
            ]
        }
    ]
}
