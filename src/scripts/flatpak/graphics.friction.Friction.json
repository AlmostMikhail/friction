{
    "app-id": "graphics.friction.Friction",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "23.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "friction",
    "finish-args": [
            "--share=ipc",
            "--socket=fallback-x11",
            "--socket=wayland",
            "--socket=pulseaudio",
            "--device=dri",
            "--filesystem=xdg-documents",
            "--filesystem=xdg-pictures"
    ],
    "modules": [
        {
            "name": "friction",
            "buildsystem": "simple",
            "build-commands": [
                "mv Friction/* /app/",
                "rm -f /app/friction",
                "rm -f /app/bin/portable.txt",
                "rm -f /app/share/icons/hicolor/*/mimetypes/application-x-graphics.friction.Friction.png",
                "rm -f /app/share/icons/hicolor/scalable/mimetypes/application-x-graphics.friction.Friction.svg"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://sourceforge.net/projects/friction/files/snapshots/1.0.0-3bc2c83b/friction-1.0.0-3bc2c83b-linux-x86_64.tar.xz",
                    "sha256": "09377fe840902048228df9f40acd2e9839ca9bb6a5084d32bb80175805aab545",
                    "dest": "./Friction"
                }
            ]
        }
    ]
}
