{
    "app-id": "graphics.friction.Friction",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "23.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "friction",
    "finish-args": [
            "--share=ipc",
            "--socket=fallback-x11",
            "--socket=wayland",
            "--socket=pulseaudio",
            "--device=dri",
            "--filesystem=xdg-documents",
            "--filesystem=xdg-pictures"
    ],
    "modules": [
        {
            "name": "friction",
            "buildsystem": "simple",
            "build-commands": [
                "mv Friction/* /app/",
                "rm -f /app/friction",
                "rm -f /app/bin/portable.txt",
                "rm -f /app/share/icons/hicolor/*/mimetypes/application-x-graphics.friction.Friction.png",
                "rm -f /app/share/icons/hicolor/scalable/mimetypes/application-x-graphics.friction.Friction.svg"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://sourceforge.net/projects/friction/files/snapshots/1.0.0-f7da1aed/friction-1.0.0-f7da1aed-linux-x86_64.tar.xz",
                    "sha256": "d6485bca3a28f2df587b93d34a632341df18adcf5d77b360724cb68702e7188f",
                    "dest": "./Friction"
                }
            ]
        }
    ]
}
